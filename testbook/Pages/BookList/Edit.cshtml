@page
@model testbook.Pages.BookList.EditModel
@{
    ViewData["Title"] = "Edit Page";
}

<h2 class="text-info"> Edit Book</h2>

<div class="border container p-5">
    <form method="post">
        <input type="hidden"  asp-for="Book.Id"  />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <span asp-validation-for="Book.Name" class="text-danger offset-3 col-12"></span>
            <div class="col-3">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="Book.Name" class="form-control" />
            </div>

        </div>
        <div class="form-group row">
            <span asp-validation-for="Book.Author" class="text-danger offset-3 col-12"></span>
            <div class="col-3">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-8">
                <input asp-for="Book.Author" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <span asp-validation-for="Book.ISBN" class="text-danger offset-3 col-12"></span>
            <div class="col-3">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-8">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
        </div>

        <div class="form-group row pt-4">
            <div class="col-4 offset-3">
                <input type="submit" name="Update" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-4">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}